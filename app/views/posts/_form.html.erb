<h2 style="font-size:32px; font-weight:900;"><%= post.class %></h2>

<%= form_with(model: post, url: url) do |form| %>
  <%#= form_with(model: post, url: posts_path) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %>. Пост не может быть сохранён:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :"Заголовок", style: "display: block" %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :"Текст публикации", style: "display: block" %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :"Добавить ссылку", style: "display: block" %>
      <%= form.text_field :content_link %>
    </div>

    <div>
      <%= form.label :"Загрузить изображение", style: "display: block" %>
      <%= form.file_field :post_image%>
    </div>

    <div>
      <%= form.label :"Тип" %>
      <%= form.select :type, ["IdeaPost", "TutorialPost"]%>
    </div>

    <div>
      <%= form.submit :"Опубликовать"%>
    </div>
  <% end %>
