<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "enter", "tech" %>
<% end %>
<section class="main-section">
  <div class="background">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <div class="banner">
      <div class="enter">
        <h1 class="title__enter">Регистрация</h1>
        <div class="wrapper__denter">
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mail", placeholder: "Почта" %>
           <%= f.password_field :password, class:"password", placeholder: "Пароль" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"password", placeholder:"Подтверждение пароля" %>

          <%= f.button "Зарегистрироваться", class: "enter_btn btn__text", name: "commit" %>
        </div>
        <div class="reg">
          <p class="not">Есть аккаунт?</p>
          <a href="/users/sign_in"><p class="regist">Войти</p></a>
        </div>
        <p class="use">Условия использования</p>
      </div>
    </div>

    <% end %>
  </div>
</section>